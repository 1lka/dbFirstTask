    <children>
        <MenuBar fx:id="menuBar" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <menus>
                <Menu fx:id="projectMenu" mnemonicParsing="false" text="Project">
                    <items>
                        <MenuItem fx:id="saveProjectMenuItem" mnemonicParsing="false" onAction="#saveProject" text="save project" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Action">
                    <items>
                        <MenuItem mnemonicParsing="false" text="generate full ddl" />
                  <MenuItem mnemonicParsing="false" text="load element" />
                  <MenuItem mnemonicParsing="false" text="load all subtree" />
                  <MenuItem mnemonicParsing="false" text="load all tree" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            <Menu mnemonicParsing="false" text="Options">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
            </menus>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
        </MenuBar>
      <AnchorPane layoutY="24.0" prefHeight="403.0" prefWidth="506.0" AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="27.0">
         <children>
              <SplitPane dividerPositions="0.4" minWidth="450.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <items>
                      <AnchorPane minWidth="150.0">
                          <children>
                              <TreeView fx:id="treeView" layoutX="59.0" layoutY="76.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                  <contextMenu>
                                      <ContextMenu fx:id="contextMenu">
                                          <items>
                                              <MenuItem fx:id="LL" mnemonicParsing="false" onAction="#lazyLoad" text="lazy load" />
                                              <MenuItem fx:id="LE" mnemonicParsing="false" onAction="#loadElement" text="load element" />
                                              <MenuItem fx:id="FL" mnemonicParsing="false" onAction="#fullyLoad" text="fully load" />
                                          </items>
                                      </ContextMenu>
                                  </contextMenu>
                              </TreeView>
                          </children>
                      </AnchorPane>
                      <AnchorPane minWidth="250.0">
                          <children>
                              <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                  <items>
                                      <TableView fx:id="attrTable" minHeight="140.0">
                                          <columns>
                                              <TableColumn fx:id="attributeColumn" prefWidth="75.0" text="attribute" />
                                              <TableColumn fx:id="valueColumn" editable="false" prefWidth="75.0" text="value" />
                                          </columns>
                                          <columnResizePolicy>
                                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                          </columnResizePolicy>
                                      </TableView>
                                      <TextArea fx:id="ddlArea" minHeight="150.0" />
                                  </items>
                              </SplitPane>
                          </children>
                      </AnchorPane>
                  </items>
              </SplitPane>
         </children>
      </AnchorPane>
      <AnchorPane maxHeight="35.0" minHeight="35.0" prefHeight="35.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Button fx:id="saveDDLbtn" layoutX="440.0" layoutY="8.0" mnemonicParsing="false" onAction="#saveDDL" text="save DDL" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" />
            <TextField fx:id="searchText" layoutX="39.0" layoutY="5.0" prefWidth="250.0" promptText="input element name" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="60.0" AnchorPane.topAnchor="5.0" />
            <Button layoutX="-4.0" layoutY="5.0" mnemonicParsing="false" onAction="#searchElement" text="search:" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0" />
            <Button layoutX="310.0" layoutY="5.0" mnemonicParsing="false" onAction="#previousElement" text="▲" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="312.0" AnchorPane.topAnchor="5.0" />
            <Button layoutX="339.0" layoutY="5.0" mnemonicParsing="false" onAction="#nextElement" text="▼" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="339.0" AnchorPane.topAnchor="5.0" />
         </children>
      </AnchorPane>
    </children>
</AnchorPane>
